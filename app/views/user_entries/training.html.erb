<div class='user-entries-training'>
	<h1>Training</h1>
	<p>Please listen to the sound displayed with the image</p>
	<% @stimuli.each_with_index do |stimulus, index| %>
	<div class="training-stimulus" id='<%= "stimuli_" + index.to_s %>'>
		<div class='img-wrapper'>
			<%= image_tag stimulus[:image] + ".jpg" %>
		</div>
		<div class='audio-wrapper'>
			<%= content_tag(:audio, stimulus[:sound], :controls => "controls") do %>
				<%= content_tag(:source, "", :src => "/assets/" + stimulus[:sound] + ".wav") %>
			<% end %>
		</div>
	</div>
	<% end %>
</div>